	public HashMap<String, License> getDB()
	{
		return db;
	}
	
	public String toString()
	{
		Iterator iterator = db.keySet().iterator();
		String s = "";
		
		while (iterator.hasNext()) 
		{
		   String key = iterator.next().toString();
		   String value = db.get(key).toString();
		   s += value + "\n\n";
		   
		}
		
		return s;
	}
	
	
